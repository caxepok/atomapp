  <rule id = "makeTask" scope = "public">
    <one-of>
      <!-- постановка новой задачи кому-то -->
      <item>
        Поставить
        <item repeat="0-1">
          периодическую<tag>out.isPeriodic="set"</tag>
        </item>
        задачу <tag>out.action="MakeTask"</tag>
        <item>
          <ruleref uri="#Target"/>
          <tag>out.target = rules.latest()</tag>
        </item>
        <item>
          <ruleref uri="#TaskClass"/>
          <tag>out.taskClass = rules.latest()</tag>
        </item>
        <item>
          <ruleref uri="#TaskObject"/>
          <tag>out.taskObject = rules.latest()</tag>
        </item>
        <item>
          Срок исполнения <tag>out.finishAt = "set"</tag>
          <item>
            <ruleref uri="#Date_Day_Month"/>
            <tag>out.date = rules.latest()</tag>
          </item>
          <item>
            Приоритет
            <item>
              <ruleref uri="#Priority"/>
              <tag>out.priority = rules.latest()</tag>
            </item>
          </item>
          <item>
            Описание
            <ruleref special="GARBAGE"/>
          </item>
        </item>
      </item>
      <!-- отправка коментария -->
      <item>
        Добавить коментарий к задаче<tag>out.action="AddComment"</tag>
        <item repeat="0-1">номер</item>
        <one-of>
          <item>
            <ruleref uri="#Cardinal_1_to_19"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_20_to_29"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_30_to_39"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_40_to_49"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_50_to_59"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
        </one-of>
        <item>
          <ruleref special="GARBAGE"/>
        </item>
      </item>
      <!-- завершение задачи -->
      <item>
        Закрыть задачу <tag>out.action="FinishTask"</tag>
        <item repeat="0-1">номер</item>
        <one-of>
          <item>
            <ruleref uri="#Cardinal_1_to_19"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_20_to_29"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_30_to_39"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_40_to_49"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
          <item>
            <ruleref uri="#Cardinal_50_to_59"/>
            <tag>out.taskId = rules.latest()</tag>
          </item>
        </one-of>
        с коментарием<tag>out.withComment="set"</tag>
        <item>
          <ruleref special="GARBAGE"/>
        </item>
      </item>
      <!-- бизнес процесс перевозки контейнера -->
      <item>
        Создать задачу на перевозку <tag>out.action="BusinessProcess-Move"</tag>
        <item>
          <ruleref uri="#TaskObject"/>
          <tag>out.taskId = rules.latest()</tag>
        </item>
        <item>
          <ruleref uri="#Workplace"/>
          <tag>out.taskId = rules.latest()</tag>
        </item>
        <item>
          <ruleref uri="#Workplace"/>
          <tag>out.taskId = rules.latest()</tag>
        </item>
        Срок исполнения <tag>out.finishAt = "set"</tag>
        <item>
          <ruleref uri="#Date_Day_Month"/>
          <tag>out.date = rules.latest()</tag>
        </item>
      </item>
    </one-of>
  </rule>

